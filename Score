class Score {
    field int CurrentScore;
    field int AddedScoreForTick;

    constructor Score(int addedScoreForTick)
    {
        let CurrentScore = 0;
        let AddedScoreForTick = addedScoreForTick;

        return this;
    }

    method void AddScoreForTickTime () 
    {
        let CurrentScore = CurrentScore + AddedScoreForTick;

        return;
    }

    method void PrintCurrentScore () 
    {
        // Отрисовка счёта

        return;
    }
}