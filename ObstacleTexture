    function void PrintObstacle (int type) 
    {
        if (type = 1)
        {
            ObstacleTexture.PrintVariant1();
        }

        if (type = 2)
        {
            ObstacleTexture.PrintVariant2();
        }

        if (type = 3)
        {
            ObstacleTexture.PrintVariant3();
        }

        return;
    }

