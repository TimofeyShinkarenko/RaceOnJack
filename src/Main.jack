class Main 
{
    function void main() 
    {
        var Game game;
        var boolean isPlaying;
        let isPlaying = true;
        while (isPlaying)
        {
            let game = Game.new();
            do game.StartGame();
            do game.Play();
            let isPlaying = game.Restart();
            do game.dispose();
        }

        return;
    }
}
